<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="24dp"
    android:paddingBottom="8dp"
    tools:context=".MainActivity">

    <!-- More top padding for status bar area -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/wordInputLayout"
        style="@style/Widget.App.TextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/searchButtonGuideline"
        android:layout_marginEnd="8dp">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/wordEditText"
            style="@style/Widget.App.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_enter_word"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:completionThreshold="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Guideline to help position the button nicely -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/searchButtonGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="90dp"/>
        <!-- Adjust this value as needed -->

    <Button
        android:id="@+id/searchButton"
        style="@style/Widget.App.Button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/button_search"
        app:layout_constraintTop_toTopOf="@+id/wordInputLayout"
        app:layout_constraintBottom_toBottomOf="@+id/wordInputLayout"
        app:layout_constraintStart_toEndOf="@id/wordInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>

    <ScrollView
        android:id="@+id/resultsScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/wordInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/footerTextView"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <!-- Padding at bottom of scrollable content inside ScrollView -->

        <LinearLayout
            android:id="@+id/definitionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>

    <TextView
        android:id="@+id/noResultsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_definition_found"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/wordInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/footerTextView"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/footerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Built with AI"
        android:textAppearance="@style/TextAppearance.App.Footer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
